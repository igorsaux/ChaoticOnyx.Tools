<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
    <head>
        <title>Changelog for {{ generating_time }}</title>
        <meta http-equiv="Content-Type" content="text/html"; charset="utf-8">
    </head>

    <body>
        {{~ last_date = null ~}}
        {{~ for changelog in changelogs ~}}
        {{~ if last_date != changelog.date ~}}
        <h2 class="date">{{ changelog.date }}</h2>
        {{~ last_date = changelog.date ~}}
        {{~ end ~}}
        <h3 class="author">{{ changelog.author }} updated:</h3>
        <ul class="changes bgimages16">
            {{~ for change in changelog.changes ~}}
            <li class="{{ change.prefix }}">{{ change.message }}</li>
            {{~ end ~}}
        </ul>
        {{~ end ~}}

        <h2>Changelog for {{ generating_time }}</h2>

    </body>
</html>